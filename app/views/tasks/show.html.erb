<div class="container">
  <h1><%= @task.title %></h1>
  <button><%= link_to 'Edit this task', edit_task_path(@task) %></button>

  <p><%= @task.details %></p>

  <p>
    <% if @task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= @message %>
  </p>

  <div class="border-top p-2">
    <i class="fas fa-history"></i>
    <%= link_to 'Back to list', tasks_path %>
  </div>
</div>
